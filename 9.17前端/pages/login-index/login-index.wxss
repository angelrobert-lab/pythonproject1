/* 页面整体样式 */
.login-container {
  padding: 30rpx;
  min-height: 100vh;
  background: linear-gradient(135deg, #f5f7fa 0%, #e4edf9 100%);
  display: flex;
  flex-direction: column;
}

/* 头部样式 */
.header {
  text-align: center;
  padding: 60rpx 0 40rpx;
}

.logo {
  width: 120rpx;
  height: 120rpx;
  margin-bottom: 20rpx;
  background-color: #2c7be5;
  border-radius: 24rpx;
  padding: 20rpx;
}

.title {
  font-size: 44rpx;
  font-weight: bold;
  color: #2d3748;
  display: block;
  margin-bottom: 10rpx;
}

.subtitle {
  font-size: 28rpx;
  color: #718096;
}

/* 卡片样式 */
.card {
  background: #ffffff;
  border-radius: 20rpx;
  box-shadow: 0 8rpx 30rpx rgba(0, 0, 0, 0.05);
  margin-bottom: 40rpx;
  overflow: hidden;
}

.card-header {
  padding: 28rpx 30rpx;
  background-color: #f7f9fc;
  border-bottom: 1rpx solid #edf2f7;
}

.card-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #2d3748;
}

/* 身份选择区域 */
.role-container {
  display: flex;
  flex-wrap: wrap;
  padding: 20rpx;
  justify-content: space-between;
}

.role-item {
  width: 48%;
  height: 180rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  margin-bottom: 20rpx;
  border: 2rpx solid #e2e8f0;
  border-radius: 16rpx;
  transition: all 0.3s ease;
  color: #4a5568; /* 文本颜色 */
}

.role-item.active {
  border-color: #2c7be5;
  background-color: #f0f7ff;
  transform: translateY(-5rpx);
  box-shadow: 0 5rpx 15rpx rgba(44, 123, 229, 0.1);
  color: #2c7be5; /* 激活状态文本颜色 */
}

.role-icon {
  width: 60rpx;
  height: 60rpx;
  margin-bottom: 15rpx;
  color: inherit; /* 继承父元素颜色 */
}

.role-name {
  font-size: 28rpx;
  font-weight: 500;
}

.role-item.active .role-name {
  font-weight: 600;
}

/* 下一步按钮 */
.next-btn {
  background: linear-gradient(135deg, #2c7be5 0%, #1a56db 100%);
  color: white;
  height: 90rpx;
  line-height: 90rpx;
  border-radius: 12rpx;
  font-size: 32rpx;
  font-weight: 500;
  margin-top: 20rpx;
  box-shadow: 0 8rpx 20rpx rgba(44, 123, 229, 0.3);
  transition: all 0.3s ease;
}

.next-btn.disabled {
  background: #cbd5e0;
  box-shadow: none;
  opacity: 0.7;
}

.next-btn:not(.disabled):active {
  transform: translateY(4rpx);
  box-shadow: 0 4rpx 10rpx rgba(44, 123, 229, 0.3);
}