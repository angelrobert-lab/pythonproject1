  height: 80rpx;
  line-height: 80rpx;
  background-color: #1890ff;
  color: #fff;
  font-size: 28rpx;
  border-radius: 40rpx;
  border: none;
}

.close-button {
  width: 200rpx;
  height: 80rpx;
  line-height: 80rpx;
  background-color: #f2f2f2;
  color: #666;
  font-size: 28rpx;
  border-radius: 40rpx;
  border: none;
}

/* 画钟表题提示句样式 */
.clock-prompt-container {
  background-color: #e6f7ff;
  border: 1rpx solid #91d5ff;
  border-radius: 12rpx;
  padding: 20rpx;
  margin-bottom: 24rpx;
}

.clock-prompt-content {
  font-size: 28rpx;
  color: #1890ff;
  line-height: 1.6;
  margin-bottom: 16rpx;
}

.prompt-options {
  display: flex;
  flex-wrap: wrap;
  gap: 12rpx;
  margin-top: 12rpx;
}

.option-tag {
  display: inline-block;
  padding: 6rpx 16rpx;
  background-color: #f0f9ff;
  color: #1890ff;
  border: 1rpx solid #91d5ff;
  border-radius: 16rpx;
  font-size: 24rpx;
  line-height: 1.4;
}

/* 连线题提示句样式 */
.connect-prompt-container {
  background-color: #f0f9ff;
  border: 1rpx solid #69c0ff;
  border-radius: 12rpx;
  padding: 20rpx;
  margin-bottom: 24rpx;
}

.connect-prompt-content {
  font-size: 28rpx;
  color: #096dd9;
  line-height: 1.6;
}

/* 画图案/立体图提示句样式 */
.draw-prompt-container {
  background-color: #fff7e6;
  border: 1rpx solid #ffd591;
  border-radius: 12rpx;
  padding: 20rpx;
  margin-bottom: 24rpx;
}

.draw-prompt-content {
  font-size: 28rpx;
  color: #fa8c16;
  line-height: 1.6;
}

/* 例图容器样式 */
.example-image-container {
  background-color: #f5f5f5;
  border: 1rpx dashed #d9d9d9;
  border-radius: 12rpx;
  padding: 20rpx;
  margin-bottom: 24rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}

.example-image {
  max-width: 100%;
  max-height: 400rpx;
  border-radius: 8rpx;
}

/* 画板预览容器样式 */
.drawing-preview-container {
  margin-bottom: 24rpx;
}

.preview-title {
  font-size: 28rpx;
  color: #606266;
  margin-bottom: 16rpx;
  display: block;
}

.drawing-preview {
  width: 100%;
  height: 500rpx;
  background-color: #fafafa;
  border: 1rpx solid #dcdfe6;
  border-radius: 12rpx;
  overflow: hidden;
  position: relative;
}

.empty-drawing {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  display: flex;
  justify-content: center;
  align-items: center;
  color: #c0c4cc;
  font-size: 28rpx;
}

/* Canvas样式 */
canvas {
  width: 100%;
  height: 100%;
}

/* 画图题画布容器 */
.draw-canvas {
  width: 100%;
  height: 100%;
}

/* 画图题容器 */
.drawing-container {
  width: 100%;
}