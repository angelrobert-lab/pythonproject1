.container {
  padding: 30rpx;
  min-height: 100vh;
  background: linear-gradient(to bottom, #f0f5ff, #e6f0ff);
}

/* 加载状态 */
.loading-container {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 200rpx 0;
}

.loading-icon {
  width: 160rpx;
  height: 160rpx;
  opacity: 0.6;
  margin-bottom: 30rpx;
}

/* 问卷容器 */
.questionnaire-container {
  background: #fff;
  border-radius: 20rpx;
  padding: 30rpx;
  box-shadow: 0 4rpx 15rpx rgba(0, 0, 0, 0.05);
}

/* 进度条 */
.progress-container {
  margin-bottom: 20rpx;
  padding: 20rpx 0;
  width: 100%;
}

.progress-bar {
  height: 16rpx;
  background-color: #e4e8f0;
  border-radius: 10rpx;
  overflow: hidden;
}

.progress-active {
  height: 100%;
  background: linear-gradient(135deg, #2c7be5 0%, #1a56db 100%);
  border-radius: 10rpx;
  transition: width 0.3s ease;
}

.progress-text {
  display: block;
  text-align: right;
  font-size: 26rpx;
  color: #2c7be5;
  margin-top: 10rpx;
  font-weight: bold;
}

/* 问卷标题 */
.questionnaire-header {
  margin-bottom: 40rpx;
  padding-bottom: 30rpx;
  border-bottom: 2rpx solid #f0f2f5;
}

.questionnaire-title {
  font-size: 36rpx;
  font-weight: 600;
  color: #303133;
  margin-bottom: 16rpx;
  display: block;
}

.questionnaire-desc {
  font-size: 28rpx;
  color: #606266;
  line-height: 1.5;
  margin-bottom: 20rpx;
  display: block;
}

.questionnaire-meta {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.questionnaire-meta text {
  font-size: 26rpx;
  color: #909399;
}

.status-badge {
  padding: 8rpx 20rpx;
  border-radius: 16rpx;
  font-size: 24rpx;
  text-align: center;
}

.status-badge.unjudged {
  background: #fff2e8;
  color: #fa8c16;
}

.status-badge.judged {
  background: #f0f9ff;
  color: #1890ff;
}

/* 问题容器 */
.questions-container {
  margin-bottom: 40rpx;
}

/* 问题项容器样式 */
.question-content-item {
  margin-bottom: 50rpx;
  padding: 20rpx 0;
}

/* 模块标签样式 */
.module-tag {
  font-size: 24rpx;
  color: #1890ff;
  background-color: #e6f7ff;
  padding: 6rpx 16rpx;
  border-radius: 16rpx;
  margin-top: 10rpx;
  display: inline-block;
}

.question-header {
  display: flex;
  align-items: flex-start;
  margin-bottom: 24rpx;
}

.question-index {
  font-size: 30rpx;
  font-weight: 600;
  color: #303133;
  margin-right: 12rpx;
  flex-shrink: 0;
}

.question-title {
  font-size: 30rpx;
  color: #303133;
  flex: 1;
  line-height: 1.5;
}

.required-mark {
  color: #ff4d4f;
  margin-left: 8rpx;
}

/* 选项样式 */
.option-item {
  margin-bottom: 16rpx;
}

.option-content {
  display: flex;
  align-items: center;
  padding: 20rpx;
  background: #f8f9fa;
  border-radius: 12rpx;
  transition: all 0.3s;
}

.option-content.selected {
  background: #e6f7ff;
  border: 1rpx solid #91d5ff;
}

.option-letter {
  width: 44rpx;
  height: 44rpx;
  border-radius: 50%;
  background: #fff;
  color: #606266;
  border: 2rpx solid #dcdfe6;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 26rpx;
  margin-right: 16rpx;
  flex-shrink: 0;
}

.option-checkbox {
  width: 44rpx;
  height: 44rpx;
  border: 2rpx solid #dcdfe6;
  border-radius: 50%;
  margin-right: 16rpx;
  flex-shrink: 0;
  position: relative;
}

.option-content.selected .option-checkbox::after {
  content: '';
  position: absolute;
  width: 22rpx;
  height: 12rpx;
  border-left: 2rpx solid #1890ff;
  border-bottom: 2rpx solid #1890ff;
  transform: rotate(-45deg);
  left: 8rpx;
  top: 10rpx;
}

.option-content.selected .option-letter {
  background: #1890ff;
  color: #fff;
  border: 1rpx solid #1890ff;
}

.option-text {
  font-size: 28rpx;
  color: #606266;
  line-height: 1.5;
}

/* 填空答案样式 */
.blank-answer {
