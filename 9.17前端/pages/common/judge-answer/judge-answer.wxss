/* pages/common/judge-answer/judge-answer.wxss */
.container {
  padding: 30rpx;
  min-height: 100vh;
  background: linear-gradient(to bottom, #f0f5ff, #e6f0ff);
}

/* 顶部区域 */
.header {
  display: flex;
  flex-direction: column;
  margin-bottom: 30rpx;
}

.search-box {
  position: relative;
  margin-bottom: 30rpx;
}

.search-icon {
  position: absolute;
  left: 20rpx;
  top: 50%;
  transform: translateY(-50%);
  width: 36rpx;
  height: 36rpx;
  z-index: 2;
}

.search-box input {
  height: 80rpx;
  padding: 0 70rpx;
  background: #fff;
  border-radius: 40rpx;
  font-size: 28rpx;
  box-shadow: 0 4rpx 15rpx rgba(0, 0, 0, 0.05);
}

.placeholder {
  color: #c0c4cc;
}

/* 列表容器 */
.list-container {
  height: calc(100vh - 190rpx);
}

/* 空状态 */
.empty-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 200rpx 0;
}

.empty-image {
  width: 200rpx;
  height: 200rpx;
  opacity: 0.5;
  margin-bottom: 30rpx;
}

.empty-text {
  font-size: 28rpx;
  color: #909399;
}

/* 列表项样式 */
.list-item {
  background: #fff;
  border-radius: 20rpx;
  padding: 30rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 4rpx 15rpx rgba(0, 0, 0, 0.05);
}

.item-header {
  display: flex;
  justify-content: space-between;
  align-items: flex-start;
  margin-bottom: 20rpx;
}

.item-name {
  font-size: 32rpx;
  font-weight: 600;
  color: #303133;
  flex: 1;
  margin-right: 20rpx;
  word-break: break-word;
}

.item-status {
  padding: 8rpx 20rpx;
  border-radius: 16rpx;
  font-size: 24rpx;
  min-width: 100rpx;
  text-align: center;
}

.item-status.unjudged {
  background: #fff2e8;
  color: #fa8c16;
}

.item-status.judged {
  background: #f0f9ff;
  color: #1890ff;
}

.item-meta {
  margin-bottom: 20rpx;
  font-size: 26rpx;
  color: #909399;
}

.item-user-info {
  margin-bottom: 20rpx;
  padding: 20rpx;
  background: #f8f9fa;
  border-radius: 10rpx;
}

.user-info-text {
  display: block;
  font-size: 26rpx;
  color: #606266;
  margin-bottom: 8rpx;
}

.user-info-text:last-child {
  margin-bottom: 0;
}

.item-actions {
  display: flex;
  justify-content: flex-end;
  gap: 20rpx;
}

.action-btn {
  padding: 0 30rpx;
  height: 70rpx;
  line-height: 70rpx;
  border-radius: 35rpx;
  font-size: 28rpx;
  border: none;
}

.action-btn.judge {
  background: #1890ff;
  color: #fff;
}

.action-btn.judge:active {
  background: #40a9ff;
}

.action-btn.delete {
  background: #fff;
  color: #ff4d4f;
  border: 1rpx solid #ffccc7;
}

.action-btn.delete:active {
  background: #fff1f0;
}