/* pages/admin/questionnaire/clock-draw-question/clock-draw-question.wxss */
.container {
  padding: 20rpx;
  background-color: #f8f9fb;
  min-height: 100vh;
  display: flex;
  flex-direction: column;
}

.edit-container {
  background: #fff;
  border-radius: 16rpx;
  box-shadow: 0 6rpx 20rpx rgba(0, 0, 0, 0.03);
  overflow: hidden;
  margin-bottom: 30rpx;
}

.section-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 28rpx 30rpx 20rpx;
  background-color: #fafafa;
  border-bottom: 1rpx solid #f0f2f5;
}

.section-title {
  font-size: 30rpx;
  font-weight: 600;
  color: #1a1a1a;
}

.title-input {
  height: 96rpx;
  padding: 0 30rpx;
  font-size: 30rpx;
  color: #333;
  background: #fff;
  border-bottom: 1rpx solid #f0f2f5;
}

.prompt-container {
  padding: 30rpx;
  display: flex;
  align-items: center;
  flex-wrap: wrap;
  border-bottom: 1rpx solid #f0f2f5;
}

.prompt-text {
  font-size: 28rpx;
  color: #333;
  margin: 0 10rpx;
}

.time-input {
  width: 120rpx;
  height: 60rpx;
  border: 1rpx solid #d9d9d9;
  border-radius: 8rpx;
  padding: 0 15rpx;
  font-size: 28rpx;
}

.relation-selector {
  display: flex;
  margin: 0 10rpx;
}

.relation-option {
  width: 60rpx;
  height: 60rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  border: 1rpx solid #d9d9d9;
  font-size: 28rpx;
}

.relation-option:first-child {
  border-top-left-radius: 8rpx;
  border-bottom-left-radius: 8rpx;
}

.relation-option:last-child {
  border-top-right-radius: 8rpx;
  border-bottom-right-radius: 8rpx;
}

.relation-option.active {
  background-color: #1aad19;
  color: #fff;
  border-color: #1aad19;
}

.options-container {
  padding: 20rpx 30rpx 30rpx;
  display: flex;
  justify-content: space-between;
  border-bottom: 1rpx solid #f0f2f5;
}

.option-item {
  display: flex;
  align-items: center;
}

.checkbox {
  width: 32rpx;
  height: 32rpx;
  border: 2rpx solid #d9d9d9;
  border-radius: 6rpx;
  margin-right: 10rpx;
  position: relative;
}

.checkbox.checked {
  border-color: #1aad19;
  background-color: #fff;
}

.checkbox.checked::after {
  content: '';
  position: absolute;
  left: 6rpx;
  top: 2rpx;
  width: 14rpx;
  height: 24rpx;
  border: solid #1aad19;
  border-width: 0 3rpx 3rpx 0;
  transform: rotate(45deg);
}

.canvas-container {
  padding: 30rpx;
  border-bottom: 1rpx solid #f0f2f5;
}

.canvas {
  width: 100%;
  height: 500rpx;
  background-color: #fff;
  border: 1rpx solid #e8e8e8;
  border-radius: 10rpx;
}

.toolbar {
  display: flex;
  justify-content: space-between;
  padding: 20rpx 30rpx;
  background-color: #f5f5f5;
  border-top: 1rpx solid #e8e8e8;
}

.color-btn {
  width: 50rpx;
  height: 50rpx;
  border-radius: 50%;
  margin: 0 10rpx;
  border: 2rpx solid transparent;
}

.color-btn.active {
  border-color: #1890ff;
}

.line-width {
  display: flex;
  align-items: center;
}

.line-width-btn {
  width: 40rpx;
  height: 10rpx;
  margin: 0 10rpx;
  background-color: #333;
  border-radius: 5rpx;
}

.clear-btn {
  font-size: 28rpx;
  color: #1890ff;
  margin-right: 20rpx;
}

.undo-btn {
  font-size: 28rpx;
  color: #1890ff;
}

.save-container {
  padding: 30rpx;
}

.save-btn {
  width: 100%;
  height: 96rpx;
  line-height: 96rpx;
  background: linear-gradient(135deg, #1890ff, #096dd9);
  color: white;
  border-radius: 48rpx;
  font-size: 34rpx;
  font-weight: 500;
  box-shadow: 0 8rpx 24rpx rgba(24, 144, 255, 0.3);
}