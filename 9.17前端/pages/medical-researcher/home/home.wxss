.researcher-container {
  min-height: 100vh;
  background: linear-gradient(160deg, #f0f5ff 0%, #e6f0ff 100%);
  padding: 30rpx 30rpx;
  box-sizing: border-box;
  position: relative;
  overflow: hidden;
}

/* 背景装饰 */
.researcher-container::before {
  content: '';
  position: absolute;
  top: -200rpx;
  right: -200rpx;
  width: 600rpx;
  height: 600rpx;
  border-radius: 50%;
  background: linear-gradient(135deg, rgba(44, 123, 229, 0.08) 0%, rgba(44, 123, 229, 0.03) 100%);
  z-index: 0;
}

/* 时间显示 */
.time-display {
  text-align: center;
  margin: 40rpx 0 50rpx;
  position: relative;
  z-index: 1;
}

.current-time {
  font-size: 80rpx;
  font-weight: 300;
  color: #2c7be5;
  letter-spacing: 4rpx;
  display: block;
  margin-bottom: 10rpx;
  text-shadow: 0 4rpx 10rpx rgba(44, 123, 229, 0.2);
}

.current-date {
  font-size: 28rpx;
  color: #5a7eb5;
  display: block;
}

/* 医学研究员信息卡片样式 */
.researcher-card {
  background: linear-gradient(135deg, #2c7be5 0%, #1a56db 100%);
  border-radius: 24rpx;
  padding: 40rpx;
  color: white;
  margin-bottom: 50rpx;
  box-shadow: 0 20rpx 40rpx rgba(44, 123, 229, 0.25);
  position: relative;
  z-index: 1;
  animation: cardAppear 0.8s cubic-bezier(0.22, 0.61, 0.36, 1);
}

.researcher-header {
  display: flex;
  align-items: center;
  margin-bottom: 30rpx;
}

.researcher-avatar {
  width: 120rpx;
  height: 120rpx;
  border-radius: 50%;
  background-color: rgba(255, 255, 255, 0.2);
  padding: 20rpx;
  margin-right: 30rpx;
  border: 3rpx solid rgba(255, 255, 255, 0.3);
}

.researcher-info {
  display: flex;
  flex-direction: column;
}

.researcher-name {
  font-size: 42rpx;
  font-weight: bold;
  margin-bottom: 15rpx;
  letter-spacing: 1rpx;
}

.researcher-role {
  font-size: 28rpx;
  background: rgba(255, 255, 255, 0.2);
  padding: 6rpx 20rpx;
  border-radius: 20rpx;
  display: inline-block;
  width: fit-content;
}

.researcher-footer {
  border-top: 1rpx solid rgba(255, 255, 255, 0.3);
  padding-top: 30rpx;
}

.login-time {
  font-size: 26rpx;
  opacity: 0.9;
  letter-spacing: 1rpx;
}

/* 功能卡片区域 */
.function-cards {
  display: flex;
  flex-direction: column;
  gap: 35rpx;
  margin-bottom: 60rpx;
  position: relative;
  z-index: 1;
}

.function-card {
  height: 250rpx;
  border-radius: 24rpx;
  padding: 35rpx 30rpx;
  box-sizing: border-box;
  position: relative;
  overflow: hidden;
  box-shadow: 0 12rpx 30rpx rgba(0, 0, 0, 0.08);
  transition: all 0.4s cubic-bezier(0.175, 0.885, 0.32, 1.1);
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}

.card-hover {
  transform: translateY(-8rpx);
  box-shadow: 0 16rpx 40rpx rgba(0, 0, 0, 0.15);
}

.card-questionnaire {
  background: linear-gradient(135deg, #4CAF50 0%, #2E7D32 100%);
  animation: cardAppear 0.8s 0.2s cubic-bezier(0.22, 0.61, 0.36, 1) both;
}

.card-profile {
  background: linear-gradient(135deg, #9C27B0 0%, #6A1B9A 100%);
  animation: cardAppear 0.8s 0.4s cubic-bezier(0.22, 0.61, 0.36, 1) both;
}

.card-icon {
  width: 70rpx;
  height: 70rpx;
  background: rgba(255, 255, 255, 0.2);
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
}

.card-icon image {
  width: 40rpx;
  height: 40rpx;
}

.card-title {
  font-size: 34rpx;
  font-weight: bold;
  color: white;
  margin: 10rpx 0 8rpx;
}

.card-desc {
  font-size: 26rpx;
  color: rgba(255, 255, 255, 0.85);
  line-height: 1.4;
}

.card-footer {
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-top: 20rpx;
  padding-top: 15rpx;
  border-top: 1rpx solid rgba(255, 255, 255, 0.2);
}

.card-footer text {
  font-size: 26rpx;
  color: rgba(255, 255, 255, 0.9);
}

.card-footer image {
  width: 26rpx;
  height: 26rpx;
  opacity: 0.7;
}

/* 退出按钮样式 */
.logout-container {
  padding: 0 20rpx;
  position: relative;
  z-index: 1;
  animation: fadeIn 1s ease-out;
}