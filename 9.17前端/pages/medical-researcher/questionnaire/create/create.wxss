.container {
  padding: 30rpx;
  min-height: 100vh;
  background-color: #f8f9fa;
  display: flex;
  flex-direction: column;
  align-items: center;
}

/* 新增卡片样式 */
.section-card {
  width: 100%;
  background: #fff;
  border-radius: 20rpx;
  padding: 30rpx;
  margin-bottom: 30rpx;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.05);
  display: flex;
  flex-direction: column;
  align-items: center;
}

.section-title {
  font-size: 36rpx;
  color: #333;
  margin-bottom: 30rpx;
  font-weight: bold;
  text-align: center;
  width: 100%;
  position: relative;
  padding-bottom: 20rpx;
}

.section-title::after {
  content: '';
  position: absolute;
  bottom: 0;
  left: 50%;
  transform: translateX(-50%);
  width: 80rpx;
  height: 6rpx;
  background: linear-gradient(135deg, #2c7be5 0%, #1a56db 100%);
  border-radius: 3rpx;
}

/* 输入框样式 */
