.module-divider::after {
  content: attr(data-module-name);
  position: absolute;
  top: -15rpx;
  left: 50%;
  transform: translateX(-50%);
  background: #fff;
  padding: 0 20rpx;
  font-size: 24rpx;
  color: #667eea;
  font-weight: bold;
}

