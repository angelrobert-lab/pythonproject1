/* 使用create页面的设计风格 */
.container {
  padding: 30rpx;
  min-height: 100vh;
  background-color: #f8f9fa;
  display: flex;
  flex-direction: column;
  align-items: center;
}

/* 卡片样式 - 与create页面保持一致 */
.section-card {
  width: 100%;
  background: #fff;
  border-radius: 20rpx;
  padding: 30rpx;
  margin-bottom: 30rpx;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.05);
  display: flex;
  flex-direction: column;
  align-items: center;
}

/* 加载状态 */
.loading-container {
  flex: 1;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  color: #666;
  font-size: 28rpx;
}

.loading-icon {
  width: 120rpx;
  height: 120rpx;
  margin-bottom: 30rpx;
  opacity: 0.6;
}

/* 进度条 */
.progress-container {
  margin-bottom: 20rpx;
  padding: 20rpx 0;
  width: 100%;
}

.progress-bar {
  height: 16rpx;
  background-color: #e4e8f0;
  border-radius: 10rpx;
  overflow: hidden;
}

.progress-active {
  height: 100%;
  background: linear-gradient(135deg, #2c7be5 0%, #1a56db 100%);
  border-radius: 10rpx;
  transition: width 0.3s ease;
}

.progress-text {
  display: block;
  text-align: right;
  font-size: 26rpx;
  color: #2c7be5;
  margin-top: 10rpx;
  font-weight: bold;
}

/* 问卷标题 */
.questionnaire-header {
  margin-bottom: 20rpx;
}

.title {
  font-size: 36rpx;
  font-weight: bold;
  display: block;
  margin-bottom: 15rpx;
  color: #333;
  text-align: center;
  white-space: normal;
  word-break: break-all;
  word-wrap: break-word;
}

.description {
  font-size: 28rpx;
  color: #666;
  display: block;
  line-height: 1.5;
  text-align: center;
  white-space: normal;
  word-break: break-all;
  word-wrap: break-word;
}

/* 问题内容 */
.question-content {
  flex: 1;
  overflow-y: auto;
  margin-bottom: 20rpx;
  width: 100%;
}

.question-card {
  min-height: 450rpx;
  display: flex;
  flex-direction: column;
  background: #f8fafc;
  border-radius: 15rpx;
  padding: 30rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.03);
