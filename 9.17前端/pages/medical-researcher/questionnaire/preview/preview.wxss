/* 单元格 */
.matrix-cell {
  flex: 0 0 180rpx;
  height: 80rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  box-sizing: border-box;
  border-right: 1rpx solid #e2e8f0;
}

.checkbox {
  width: 40rpx;
  height: 40rpx;
  border: 2rpx solid #2c7be5;
  border-radius: 8rpx;
}

.checkbox.checked {
  background-color: #2c7be5;
  position: relative;
}

.checkbox.checked::after {
  content: '';
  position: absolute;
  top: 8rpx;
  left: 6rpx;
  width: 20rpx;
  height: 12rpx;
  border: 2rpx solid white;
  border-top: none;
  border-right: none;
  transform: rotate(-45deg);
}